@model MagicVilla_Web.Models.DTO.VillaModifyDTO

@{
    ViewData["Title"] = "Update";
}

<div class="container p-4 border">
    <div class="row">
        <div class="col text-end pt-1">
            <h3 class="text-primary">Update Villa</h3>
        </div>
    </div>
    <hr class="mt-0" />
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Update">
                <div class="row pb-3 d-none">
                    <div class="col-2">
                        <label asp-for="Id" class="control-label"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Details" class="control-label"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Details" class="form-control" />
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Rate" class="control-label"></label>

                    </div>
                    <div class="col-10">
                        <input asp-for="Rate" class="form-control" />
                        <span asp-validation-for="Rate" class="text-danger"></span>

                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Sqft" class="control-label"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Sqft" class="form-control" />
                        <span asp-validation-for="Sqft" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Occupancy" class="control-label"></label>

                    </div>
                    <div class="col-10">
                        <input asp-for="Occupancy" class="form-control" />
                        <span asp-validation-for="Occupancy" class="text-danger"></span>

                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="ImageUrl" class="control-label"></label>

                    </div>
                    <div class="col-10">
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>

                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Amenity" class="control-label"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Amenity" class="form-control" />
                        <span asp-validation-for="Amenity" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-5 offset-2">
                        @Html.ActionLink("Back", "Index", new { controller = "Villa" }, new { @class = "btn btn-primary form-control" })
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
