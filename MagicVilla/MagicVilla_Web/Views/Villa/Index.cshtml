@model IEnumerable<MagicVilla_Web.Models.DTO.VillaDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="text-primary">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="ViewCreate" class="btn btn-outline-primary">Create New Villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Occupancy)
                </th>
                <th>
                   Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Occupancy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { controller = "Villa", Id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Edit", "ViewUpdate", new { controller = "Villa", Id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { controller = "Villa", Id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

