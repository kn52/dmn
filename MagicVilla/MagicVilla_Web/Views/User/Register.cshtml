@model MagicVillaServiceJ.RegistrationRequestDTO

@{
    ViewData["Title"] = "Register";
}

<div class="container p-4 border">
    <div class="row">
        <div class="col text-end pt-1">
            <h3 class="text-primary">Register User</h3>
        </div>
    </div>
    <hr class="mt-0" />
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Register">
                <div class="row pb-3 d-none">
                    <div class="col-2">
                        <label asp-for="UserName" class="control-label"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Password" class="control-label"></label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-2">
                        <label asp-for="Role" class="control-label"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Role" class="form-control" />
                        <span asp-validation-for="Role" class="text-danger"></span>

                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-5 offset-2">
                        @Html.ActionLink("Back", "Index", new { controller = "User" }, new { @class = "btn btn-primary form-control" })
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Register" class="btn btn-success form-control" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
