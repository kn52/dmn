@model IEnumerable<MagicVillaServiceJ.RegistrationRequestDTO>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-4 border">
    <div class="row pb-2">
        <div class="text-primary">
            <h3 class="text-primary">User List</h3>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="User" asp-action="ViewLogin" class="btn btn-primary">Login</a> | 
            <a asp-controller="User" asp-action="ViewRegister" class="btn btn-success">Register</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoleId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>