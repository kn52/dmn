@model MagicVilla_Web.Models.DTO.VillaNumberDTO

@{
    ViewData["Title"] = "Create";
}

<div class="container p-4 border">
    <div class="row pb-3">
        @Html.ActionLink("Back", "Index", new { controller = "VillaNumber" })
    </div>
    <div class="row">
        <div class="col text-start pt-1">
            <h4 class="text-primary">Create VillaNumber</h4>
        </div>
    </div>
    <hr class="mt-0" />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VillaNo" class="control-label"></label>
                    <input asp-for="VillaNo" class="form-control" />
                    <span asp-validation-for="VillaNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VillaId" class="control-label"></label>
                    <input asp-for="VillaId" class="form-control" />
                    <span asp-validation-for="VillaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpecialDetails" class="control-label"></label>
                    <input asp-for="SpecialDetails" class="form-control" />
                    <span asp-validation-for="SpecialDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedDateTime" class="control-label"></label>
                    <input asp-for="CreatedDateTime" class="form-control" />
                    <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UpdatedDateTime" class="control-label"></label>
                    <input asp-for="UpdatedDateTime" class="form-control" />
                    <span asp-validation-for="UpdatedDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
