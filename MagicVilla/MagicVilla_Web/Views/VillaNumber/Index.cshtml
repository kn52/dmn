@model IEnumerable<MagicVilla_Web.Models.DTO.VillaNumberDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="text-primary">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="ViewCreate" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VillaNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VillaId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpecialDetails)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedDateTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VillaNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VillaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecialDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedDateTime)
                    </td>
                    <td>
                        @Html.ActionLink("View", "Details", new { controller = "VillaNumber", Id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Edit", "ViewUpdate", new { controller = "VillaNumber", Id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { controller = "VillaNumber", Id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
