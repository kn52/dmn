@using Microsoft.AspNetCore.Components
@using System.Globalization
@model IEnumerable<MagicVillaServiceJ.VillaDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>


<div class="row" style="--bs-gutter-x:0">
    @foreach (var item in Model)
    {
        <div class="row" style="border-radius: 20px; border: 1px solid #fff;">
            <div class="col-4">
                <img class="d-block w-100" style="border-radius: 20px;" src="@item.ImageUrl" alt="villa" />
            </div>
            <div class="col-8">
                <p class="card-title text-warning" style="font-size:xx-large">@item.Name</p>
                <p class="card-text">@((MarkupString)item.Details)</p>
            </div>
            <div class="col-12">
                <div class="row pb-3 pt-2">
                    <div class="col-4">
                        <a href="" class="btn btn-success form-control btn-block">Book</a>
                    </div>
                    <div class="col-4">
                        <span class="">Max Occupancy: @item.Occupancy</span>
                        <span class="pt-1">Villa Size: @item.Sqft</span>
                        <span class=""></span>
                    </div>
                    <div class="col-4">
                        <span class="text-warning float-end float-weight-bold pt 1">
                            USD
                            <span class="border-bottom: 1px solid #ff6a00">
                                @string.Format(CultureInfo.InvariantCulture, "{0:C}", item.Rate)
                            </span>
                        </span>

                    </div>
                </div>
            </div>
            <div class="col-12">
            </div>
            <div class="col-12"></div>
            <div class="col-12"></div>
            <div class="col-12"></div>
        </div>
    }
</div>